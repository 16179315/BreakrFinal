<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/idBarChart"
        android:layout_width="362dp"
        android:layout_height="357dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberId"></com.github.mikephil.charting.charts.BarChart>

    <Button
        android:id="@+id/buttonId"
        android:layout_width="123dp"
        android:layout_height="61dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="Generate Chart"
        android:textColor="#00ABFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerId"
        android:layout_width="157dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numberId"
        android:layout_width="45dp"
        android:layout_height="61dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Number Of Apps"
        android:inputType="number"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/buttonId"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toEndOf="@+id/spinnerId"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>