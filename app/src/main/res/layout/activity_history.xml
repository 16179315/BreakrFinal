<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/idPieChart"
        android:layout_width="382dp"
        android:layout_height="384dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/numberId"
        tools:layout_editor_absoluteX="1dp"></com.github.mikephil.charting.charts.PieChart>

    <Button
        android:id="@+id/buttonId"
        android:layout_width="288dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:text="Generate Chart"
        android:textColor="#00ABFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numberId"
        android:layout_width="45dp"
        android:layout_height="61dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Number Of Apps"
        android:inputType="number"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/buttonId"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>